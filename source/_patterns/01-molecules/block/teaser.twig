<article class="block teaser{{ data.class ? ' ' ~ data.class }}">
  
{% if data.timestamp %}
    <div class="timestamp">{{ data.timestamp }}</div>
{% endif %}
{% if data.hideTeaserImage != 'true' %}
    <div class="image">
        <a href="{{ (attribute(link, page_prefix|default('pages') ~ '-' ~ data.targetPage))|default('#') }}">
            {% include "atoms-teaser-image-16x9" with {data: data} %}
        </a>
        {% if data.source != 'false' %}
        <p class="source">Â© {{ data.source|default('picsum.photos') }}</p>
        {% endif %}
    </div>
{% endif %}
    <div class="inner">
      <h3 class="heading">
        <a href="{{ attribute(link, page_prefix|default('pages') ~ '-' ~ data.targetPage) }}">
        {{ data.title|default('Title') }}
        </a>
      </h3>
      {% if data.hideAuthor != 'true' %}
      <p class="author">von <a href="#" class="author-name">{{ data.author|default('Author') }}</a></p>
      {% endif %}
      {% if data.text != 'false' %}
      <p class="text">
        {{ data.text|default('Lorem ipsum dolor sit amet consectetur adipisicing elit. Lorem ipsum dolor sit amet.') }}
      </p>
      {% endif %}
    </div>
</article>
