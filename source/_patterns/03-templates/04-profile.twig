    {% extends "main.twig" %}

    {% block pagetitle %}{{ profil.title }}{% endblock %}
    
    {#% block breadcrumb %}{% endblock %#}
    
    {% block content %}
        <div class="grid">
            <div class="grid__item">
        <div class="heading--profilcat">{{ profil.category|default('Herausgeberkreis')|raw }}</div>
        </div>
        </div>

        <div class="grid content-wrapper-profil">
            <div class="grid__item two-tenths content-spacer"></div>
                <!-- /grid__item -->
                <main class="grid__item eight-tenths content-left">
                    {% if profil.title %}
                        <h1 class="heading--article">{{ profil.title }}</h1>
                    {% endif %}
                  
                       
                        {% for block in profil.content %}
                            {% include block.pattername with { "data": block } %}
                        {% endfor %}
                 

                </main><!-- /grid__item -->
               
                {% if profil.marginal %}
                <aside class="marginal_ grid__item two-tenths content-right">

                    {% for item in profil.marginal %}
                        {#% include item.pattername with { "data": item } %#}
                    {% endfor %} 

                </aside><!-- /grid__item -->
                {% else %}
                    <span class="grid__item two-tenths">
                    </span>
                {% endif %}
        </div>


    



    {% endblock %}

