        "hideTeaserImage": true,
        "class": "teaser--text",
        "text": "false"
    }} %}</code></pre>

    {% include "organisms-teasergrid" with {data: {
                "gridItenClass": "one-third",
                "gridClass": "grid--stretch",
                "content": [
                    {
                        "pattername": "molecules-teaser",
                        "hideTeaserImage": true,
                        "class": "teaser--text",
                        "title": "Textteaser",
                        "hideAuthor": "true"
                    }
                ]
    }} %} 
