<h3>Typ: Startseite</h3>
<pre><code class="sg-code-inline">

<main class="content-wrapper-homepage">
  <h1 class="aural">Pagetitle</h1>
  <div class="hero">
    <!-- HERO CONTENT HERE -->
  </div>
  <div class="grid">
    <div class="grid__item one-sixth">
    </div>
    <div class="grid__item four-sixths">
      <!-- HOMEPAGE CONTENT HERE -->
    </div>
